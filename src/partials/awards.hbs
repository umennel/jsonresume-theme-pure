{{#if resume.awards.length}}
<section id="awards">
	<h2 class="text-2xl mt-6 pb-1 border-b font-bold">Awards</h2>
	<ul class="mt-2 text-base">
		{{#each resume.awards}}
		<li class="pt-2">
			<div class="flex flex-row justify-between">
				<div>
					{{#if title}}
					<strong>{{title}}</strong>
					{{/if}}
					{{#if awarder}}
                    <span class="ml-2">{{awarder}}</span>
                    {{/if}}
				</div>
				{{#if date}}
				<div>
					{{year date}}
				</div>
				{{/if}}
			</div>
			{{#if summary}}
			<p class="mt-1 text-justify">{{summary}}</p>
			{{/if}}
		</li>
		{{/each}}
	</ul>
</section>
{{/if}}
