{{#if resume.publications.length}}
<section id="publications">
	<h2 class="text-2xl mt-6 pb-1 border-b font-bold">Publications</h2>
	<ul class="mt-2 text-base">
		{{#each resume.publications}}
		<li class="pt-2">
			<div class="flex flex-row justify-between">
				<div>
					{{#if url}}
					<a href="{{url}}">
					{{/if}}
						{{#if name}}
						<strong>{{name}}</strong>
						{{else}}
							{{#if url}}
							{{url}}
							{{/if}}
						{{/if}}
					{{#if url}}
					</a>
					{{/if}}
				</div>
				{{#if releaseDate}}
				<div>
					{{month releaseDate}} {{year releaseDate}}
				</div>
				{{/if}}
			</div>
			{{#if publisher}}
			<p class="py-1"><em>{{publisher}}</em></p>
			{{/if}}
			{{#if summary}}
			<p class="text-justify">{{summary}}</p>
			{{/if}}
		</li>
		{{/each}}
	</ul>
</section>
{{/if}}
